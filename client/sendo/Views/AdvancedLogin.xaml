            <Button Content="Back" Margin="0,675,0,0" VerticalAlignment="Top" Width="276" Height="65" Foreground="White" Background="#FF9E9E9E" FontSize="36" FontFamily="Arial Black" Grid.Row="2" HorizontalAlignment="Center"/>
            <TextBlock HorizontalAlignment="Center" Margin="0,342,0,0" Text="ADVANCED LOGIN" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="36" Width="373" FontFamily="Arial Black" TextAlignment="Center" Grid.Row="2" Height="43"/>
            <Ellipse HorizontalAlignment="Center" Height="290" Margin="0,10,0,0" Stroke="Black" VerticalAlignment="Top" Width="290" Grid.RowSpan="2" Grid.Row="1"/>
        </Grid>

    </Grid>
</Page>
