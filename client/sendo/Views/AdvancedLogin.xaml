            <Border BorderThickness="1" BorderBrush="Black" Margin="0,0,0,15" Background="Black"/>
            <TextBox HorizontalAlignment="Center" Margin="0,415,0,0" Text="insert Domain or IP" TextWrapping="Wrap" VerticalAlignment="Top" Width="318" RenderTransformOrigin="0.5,0.5" Height="50" FontSize="24" FontFamily="Arial Black" Grid.Row="2" FocusVisualPrimaryBrush="Black" Foreground="Black" BorderBrush="#99000000" Background="#66FFFFFF" FocusVisualSecondaryBrush="#99FFFFFF" SelectionHighlightColorWhenNotFocused="White">
                <TextBox.RenderTransform>
                    <CompositeTransform Rotation="0"/>
                </TextBox.RenderTransform>
            </TextBox>
            <TextBlock HorizontalAlignment="Center" Margin="0,260,0,0" Text="SENDO" TextWrapping="Wrap" VerticalAlignment="Top" Height="90" Width="310" FontSize="64" TextAlignment="Center" FontFamily="Arial" FontWeight="Normal" Grid.Row="2" Foreground="Red"/>
